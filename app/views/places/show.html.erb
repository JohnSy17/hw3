<!-- Show the entries for a specific place -->

<h1><%= @place_info["name"] %></h1>

<p>
  <a href="/">Back to all places</a>
</p>

<div class="row">
  <% if @entries_rend.blank? %>
    <h4>No entries for this location yet!</h4>
  <%else%>
    <% for entry in @entries_rend %>
        <h3><%= entry["title"] %></h3>
        <h4><%= entry["occurred_on"] %></h4>
        <p><%= entry["description"] %></p>
        <div style="height: 10px;"></div>
    <% end %>
  <%end%>
</div>

<p>
  <a href="/entries/new?place_id=<%= @place_info["id"]%>">New Entry</a>
</p>